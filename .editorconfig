# -*- coding: utf-8; mode: editorconfig -*-
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 80
indent_style = space
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 4
